<UserControl x:Class="CocoaLib.CustomControl.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CocoaLib.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="250">

    <PasswordBox x:Name="txtPassword"
                 FontSize="16"
                 FontWeight="Medium"
                 CaretBrush="DarkGray"
                 Foreground="LightGray"
                 BorderBrush="MediumAquamarine"
                 BorderThickness="0,0,0,1"
                 Padding="25,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/CocoaLib;component/pics/key-icon.png"
                Stretch="None"
                AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
    <!--复制粘贴过来的passwordBox属性要把height和width去掉，俩个属性在Design里设置的-->
</UserControl>
